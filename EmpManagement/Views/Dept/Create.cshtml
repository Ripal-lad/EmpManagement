@model EmpManagement.Models.Dept
@{
    ViewBag.Title = "Create";
 }


@using (Html.BeginForm())
    {
        <div class="jumbotron">

            <h2 style="color:blue"> Create new department </h2>
          
                @Html.AntiForgeryToken()

                <table cellspacing="10" align="center" class="table" cellpadding="5" style="font-size:large">
                    <tr>
                        <td>
                            <b>Department Name</b>
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.DName)
                            @Html.ValidationMessageFor(model => model.DName,"This field is required")
                        </td>
                    </tr>
                    <tr>
                        <td align="justify" colspan="2">
                            <input type="submit" value="Create New" class="btn btn-default" />
                            <input type="reset" value="Cancel" class="btn btn-default">
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Back to List", "Index")
                    <tr>
                        <td>
                </table>
       </div>
    
}
