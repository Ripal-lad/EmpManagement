@model EmpManagement.Models.Employee
@{
    ViewBag.Title = "Edit";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css">

     @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        <div class="jumbotron">
            <table cellspacing="10" align="center" class="table" cellpadding="5" style="font-size:large">
                <tr>
                    <td align="center">
                        <h2 style="color:blue"><u> Update Details of @Html.DisplayFor(model => model.Name) </u></h2>
                    </td>
                </tr>
                <tr></tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Name)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td><b>  Department </b></td>
                    <td>
                        @Html.DropDownListFor((model => model.DeptID), ViewBag.DeptList as SelectList, "Select Department")
                        @Html.ValidationMessageFor(model => model.DeptID, "The Department Field is Required")
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Designation)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Designation)
                        @Html.ValidationMessageFor(model => model.Designation)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Emailid)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Emailid)
                        @Html.ValidationMessageFor(model => model.Emailid)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.ContactNo)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.ContactNo)
                    </td>
                </tr>
                <tr>
                    <td align="justify" colspan="2">
                        <input type="submit" value="Update" name="Update">
                        <input type="reset" value="Cancel" name="Reset">
                    </td>

                </tr>

                <tr>
                    <td>
                        @Html.ActionLink("Back to List", "Index")
                    </td>
                </tr>
            </table>
            </div>
        }
